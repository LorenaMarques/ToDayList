<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskBeats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Title1" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arsenal_bold</item>
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Description1">
        <item name="android:fontFamily">@font/arsenal_bold</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Background">
        <item name="android:background">@drawable/item_border</item>
    </style>

    <style name="Title2" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/arsenal_bold</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>