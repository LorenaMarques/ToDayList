<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape
            android:shape="rectangle">
            <padding
                android:left="4dp"/>
            <solid
                android:color="@color/light_black"/>
            <corners
                android:radius="8dp"/>
        </shape>
    </item>
    <item
        android:right="1dp"
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/light_black">
            </solid>
            <corners
                android:radius="8dp">
            </corners>
        </shape>
    </item>
</layer-list>